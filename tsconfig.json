{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "experimentalDecorators": true, // 반드시 true로 설정
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir" : "./dist",
    "typeRoots": ["./node_modules/@types", "./src/server/config/types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "/node_modules"
  ]
}